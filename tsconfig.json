{
  "include": ["src/", "__test__/"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "checkJs": false,
    "allowJs": false,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@xus/vue-reuse": ["src/"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
